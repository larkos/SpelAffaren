@model SpelDatabas.Produkt

@{
   var db = new SpelDatabas.SpelDatabasContainer();
}

@using (Html.BeginForm())
{
   <div class="row">
      <h4>Id: @Model.Id, namn: @Model.Namn</h4>
      <hr class="featurette" />
      @Html.HiddenFor(model => model.Id)
      <div class="col-md-2 col-sm-4">
         <div class="form-group">
            @Html.Label("Namn", new { @class = "control-label" })
            @Html.Editor("namn", new { htmlAttributes = new { @class = "form-control" } })
         </div>
         <div class="form-group">
            @Html.Label("Utgivare", new { @class = "control-label" })
            @Html.ListBox("Utgivare", db.UtgivareSet.Select(u => new SelectListItem { Text = u.Namn, Value = u.Id.ToString() }), new { @class = "form-control" })
         </div>
         <div class="form-group">
            @Html.Label("Utgivningsår", new { @class = "control-label" })
            @Html.Editor("utgivningsår", new { htmlAttributes = new { @class = "form-control", style = "width:60%;" } })
         </div>
         <div class="form-group">
            @Html.Label("Pris", new { @class = "control-label" })
            @Html.Editor("pris", new { htmlAttributes = new { @class = "form-control" } })
         </div>
      </div>
         <div class="col-md-3 col-sm-6">
            <div class="form-group">
               @Html.Label("Konsol", new { @class = "control-label" })
               @Html.ListBox("Konsoler", db.KonsolSet.Select(k => new SelectListItem { Text = k.Namn, Value = k.Id.ToString() }), new { @class = "form-control", style = "height:178px;" })
            </div>
            <div class="form-group">
               @Html.Label("Multiplayer")
               @Html.CheckBox("multiplayer", new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
               @Html.Label("Singleplayer")
               @Html.CheckBox("singleplayer", new { htmlAttributes = new { @class = "form-control" } })
            </div>
         </div>
         <div class="col-md-3 col-sm-6">
            <div class="form-group">
               @Html.Label("Genre", new { @class = "control-label" })
               @Html.ListBox("genres", db.GenreSet.Select(t => new SelectListItem { Text = t.Namn, Value = t.Id.ToString() }), new { @class = "form-control", style = "height:178px;" })
            </div>
         </div>
         <div class="col-md-3 col-sm-6">
            <div class="form-group">
               @Html.Label("Beskrivning", new { @class = "control-label" })
               @Html.TextArea("beskrivning", new { @class = "form-control", style = "height:178px;" })
            </div>
         </div>
      </div>
      <div class="row">
         <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
               <input type="submit" value="Spara" class="btn btn-default" />
            </div>
         </div>
      </div>
}

<div class="row">
   <div class="col-md-3 col-sm-6">
      @Html.ActionLink("Tillbaka", "Index")
   </div>
</div>