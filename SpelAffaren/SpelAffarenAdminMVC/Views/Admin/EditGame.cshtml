@model SpelDatabas.Produkt

@{
   var db = new SpelDatabas.SpelDatabasContainer();
}

@using (Html.BeginForm())
{
   <div class="form-horizontal">
      <h4>Id: @Model.Id, namn: @Model.Namn</h4>
      <hr class="featurette" />
      @Html.HiddenFor(model => model.Id)

      <div class="form-group">
         @Html.Label("Namn", new { @class = "control-label col-md-2" })
         <div class="col-md-6">
            @Html.Editor("namn", new { htmlAttributes = new { @class = "form-control" } })
         </div>
      </div>

      <div class="form-group">
         @Html.Label("Konsol", new { @class = "control-label col-md-2" })
         <div class="col-md-6">
            @Html.ListBox("Konsoler", db.KonsolSet.Select(k => new SelectListItem { Text = k.Namn, Value = k.Id.ToString() }), new { @class = "form-control" })
         </div>
      </div>

      <div class="form-group">
         @Html.Label("Utgivare", new { @class = "control-label col-md-2" })
         <div class="col-md-6">
            @Html.ListBox("Utgivare", db.UtgivareSet.Select(u => new SelectListItem { Text = u.Namn, Value = u.Id.ToString() }), new { @class = "form-control" })
         </div>
      </div>

      <div class="form-group">
         @Html.Label("Genre", new { @class = "control-label" })
         <div class="col-md-6">
            @Html.ListBox("genres", db.GenreSet.Select(t => new SelectListItem { Text = t.Namn, Value = t.Id.ToString() }), new { @class = "form-control", style = "height:300px;" })
         </div>
      </div>

      <div class="form-group">
         @Html.Label("Beskrivning", new { @class = "control-label" })
         <div class="col-md-6">
            @Html.TextArea("beskrivning", new { @class = "form-control", style = "height:250px;width:60%;" })
         </div>
      </div>

      <div class="form-group">
         @Html.Label("Utgivningsår", new { @class = "control-label" })
         <div class="col-md-6">
            @Html.Editor("utgivningsår", new { htmlAttributes = new { @class = "form-control", style = "width:60%;" }})
         </div>
      </div>

      <div class="form-group">
         <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Spara" class="btn btn-default" />
         </div>
      </div>
   </div>
}

<div>
   @Html.ActionLink("Tillbaka", "Index")
</div>